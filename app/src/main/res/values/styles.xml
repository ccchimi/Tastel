<resources>

    <!-- Tema general -->
    <style name="Theme.Tastel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <!-- Estilo para cada Chip -->
    <style name="Widget.Tastel.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="checkedIconVisible">false</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <!-- Estilo para el ChipGroup -->
    <style name="Widget.Tastel.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipSpacingHorizontal">8dp</item>
        <item name="chipSpacingVertical">4dp</item>
    </style>

    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

</resources>